<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Layout with overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Text centered in the FrameLayout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="장소 검색"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <!-- Back button positioned on top of the text -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="start|center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/back_button"
            android:scaleType="fitCenter"
            android:contentDescription="Back Button"/>

    </FrameLayout>

    <!-- Search Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/search_bar_background"
            android:hint="장소, 버스, 지하철, 주소 검색"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/greyColor"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <!-- Sort and Filter Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신순 ▼"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_bold"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="조건 적용"
            android:textColor="@color/white"
            android:fontFamily="@font/notosanskr_bold"
            android:textSize="18dp"
            android:background="@drawable/corner_up_right"/>
    </LinearLayout>


    <!-- List of Results -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Example Item 1 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대우빌딩"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanskr_bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="77km · 서울 종로구 새문안로3길 30"
                    android:textSize="16sp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:textColor="@color/greyColor"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <!-- Example Item 2 (Repeat as needed) -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대우빌딩"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanskr_bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="77km · 서울 종로구 새문안로3길 30"
                    android:fontFamily="@font/notosanskr_bold"
                    android:textSize="16sp"
                    android:textColor="@color/greyColor"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
